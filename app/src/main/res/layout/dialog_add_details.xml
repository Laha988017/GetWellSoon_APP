<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorBackgroundWhiteGlobal"
    android:layout_width="320dp"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/alergicTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_full_radius"
        android:hint="Allergic to"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputHint" />



    <EditText
        android:id="@+id/medicalHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_full_radius"
        android:hint="Enter Medical History"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputHint" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blood Group" />

    </LinearLayout>


    <EditText
        android:id="@+id/bloodGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_full_radius"
        android:hint="Enter Rh Factor"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputHint" />

    <EditText
        android:id="@+id/bloodtype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_full_radius"
        android:hint="Enter Blood Type"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputHint" />

    <EditText
        android:id="@+id/ailment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_full_radius"
        android:hint="Enter Ailment"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputHint" />

    <EditText
        android:id="@+id/isCovidPositive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_full_radius"
        android:hint="Are you diagonised with Covid"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="20dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorInputText"
        android:textColorHint="@color/colorInputHint" />

    <Button
        android:id="@+id/addDetailsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_navyblue_gradient"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:text="Add Details"
        android:textColor="#CCCECF"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>